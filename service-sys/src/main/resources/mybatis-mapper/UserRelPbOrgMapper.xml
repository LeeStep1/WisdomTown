<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit.module.system.dao.UserRelPbOrgDao">

	<!-- 用于select查询公用抽取的列 -->
	<sql id="UserRelPbOrg_columns">
	    <![CDATA[
			id as id,
			user_id as user_id,
			pborg_id as pborg_id
	    ]]>
	</sql>

	<!-- 字段与属性映射 -->
	<resultMap type="com.bit.module.system.bean.UserRelPbOrg" id="userRelPbOrgMap">
		<id column="id" property="id"/>
	    <result column="user_id" property="userId"/>
	    <result column="pborg_id" property="pborgId"/>
	</resultMap>

	<!-- 翻页查询 -->
	<select id="findByConditionPage" resultMap="userRelPbOrgMap" parameterType="com.bit.module.system.vo.UserRelPbOrgVO">
		select <include refid="UserRelPbOrg_columns" /> from t_sys_user_rel_pb_org
		<where>
			<if test="id != null  " >and id =#{id,jdbcType=BIGINT}</if>
			<if test="userId != null  " >and user_id =#{userId,jdbcType=BIGINT}</if>
			<if test="pborgId != null  " >and pborg_id =#{pborgId,jdbcType=BIGINT}</if>
			<if test="orgId != null  " >and pborg_id =#{orgId,jdbcType=VARCHAR}</if>
		</where>
		<if test="orderBy!=null and orderBy!=''">
		ORDER BY ${orderBy}
		</if>
		<if test="order!=null and order!=''">
		${order}
		</if>
	</select>

	<!-- 查询全部 -->
	<select id="findAll" resultMap="userRelPbOrgMap" parameterType="String">
		select <include refid="UserRelPbOrg_columns" /> from t_sys_user_rel_pb_org
		<if test="sorter!=null and sorter!=''">
			ORDER BY ${sorter}
		</if>
	</select>

	<!-- 查询单条记录 -->
	<select id="findById" resultMap="userRelPbOrgMap" parameterType="com.bit.module.system.bean.UserRelPbOrg">
		select <include refid="UserRelPbOrg_columns" /> 
		from t_sys_user_rel_pb_org
		where id =#{id,jdbcType=BIGINT}
	</select>

	<!-- 根据组织id查询统计 -->
	<select id="findCountByPbId" resultType="java.lang.Integer">
		select count(1) from t_sys_user_rel_pb_org where  pborg_id =#{pborgId,jdbcType=BIGINT}
	</select>
    <select id="findByUserId" resultType="com.bit.module.system.bean.UserRelPbOrg">
		select <include refid="UserRelPbOrg_columns" />
		from t_sys_user_rel_pb_org
		where user_id= #{userId,jdbcType=BIGINT}
	</select>

    <!-- 添加一条记录 -->
	<insert id="add" parameterType="com.bit.module.system.bean.UserRelPbOrg">
		insert INTO t_sys_user_rel_pb_org (
			user_id ,
			pborg_id
		) VALUES (
			#{userId,jdbcType=BIGINT},
			#{pborgId,jdbcType=BIGINT}
		)
	</insert>

	<!-- 批量添加 -->
	<insert id="batchAdd"  parameterType="java.util.List">
		insert INTO t_sys_user_rel_pb_org (
			user_id ,
			pborg_id
		) VALUES
		<foreach collection="list" index="index" item="item" separator=",">
			(#{item.userId,jdbcType=BIGINT},
			#{item.pborgId,jdbcType=BIGINT}
			)
		</foreach>
	</insert>

    <!-- 修改一条记录 -->
	<update id="update" parameterType="com.bit.module.system.bean.UserRelPbOrg">
		update t_sys_user_rel_pb_org
		<set>
		<if test="userId != null">
		 user_id =#{userId,jdbcType=BIGINT},
		</if>
		<if test="orgCode != null">
			pborg_id =#{pborgId,jdbcType=BIGINT}
		</if>
		</set>
		where  id = #{id,jdbcType=BIGINT}
	</update>

	<!-- 删除一条记录 -->
	<delete id="delete" parameterType="com.bit.module.system.bean.UserRelPbOrg">
		delete from t_sys_user_rel_pb_org where id = #{id,jdbcType=BIGINT}
	</delete>

	<!-- 批量删除 -->
	<delete id="batchDelete" parameterType="List">
		<foreach item="item" index="index" collection="list" open="begin" close=";end;" separator =";">
			delete from t_sys_user_rel_pb_org
			id in (
			<foreach collection="ids" item="id" separator=",">
				#{id}
			</foreach>
			)
		</foreach>
	</delete>

	<!-- 根据用户id删除中间表 -->
	<delete id="delByUserId">
		delete from t_sys_user_rel_pb_org where user_id =#{userId,jdbcType=BIGINT}
	</delete>


	<select id="getPbUserByName" parameterType="com.bit.module.system.bean.OrgAndName" resultType="com.bit.module.system.bean.User">
		select t2.* from t_sys_user_rel_pb_org t1
		INNER JOIN t_sys_user t2
		on t1.user_id=t2.id
		<where>
			<if test="pbOrgIds!=null">and t1.pborg_id in
				<foreach collection="pbOrgIds" item="pbOrgId" open="(" close=")" separator=",">
					#{pbOrgId,jdbcType=VARCHAR}
				</foreach>
			</if>
			<if test="name!=null">and t2.real_name like #{name,jdbcType=VARCHAR}"%"</if>
		</where>

	</select>

	<select id="findAllByParam" resultMap="userRelPbOrgMap" parameterType="com.bit.module.system.bean.UserRelPbOrg">
		select <include refid="UserRelPbOrg_columns" /> from t_sys_user_rel_pb_org
		<where>
			<if test="id != null  " >and id =#{id,jdbcType=BIGINT}</if>
			<if test="userId != null  " >and user_id =#{userId,jdbcType=BIGINT}</if>
			<if test="pborgId != null  " >and pborg_id =#{pborgId,jdbcType=BIGINT}</if>
		</where>
	</select>

	<select id="findUserIdCardByOrgIds" parameterType="long" resultType="string">
		SELECT t2.idcard from t_sys_user_rel_pb_org t1
		INNER JOIN t_sys_user t2
		on t1.user_id = t2.id
		<where>
			t1.pborg_id in
			<foreach collection="orgIds" item="orgId" open="(" close=")" separator=",">
				#{orgId,jdbcType=BIGINT}
			</foreach>
		</where>
	</select>

	<select id="findUserByOrgIds" parameterType="long" resultType="com.bit.module.system.vo.UserVO">
		SELECT t2.*,t1.pborg_id from t_sys_user_rel_pb_org t1
		INNER JOIN t_sys_user t2
		on t1.user_id = t2.id
		<where>
			t1.pborg_id in
			<foreach collection="orgIds" item="orgId" open="(" close=")" separator=",">
				#{orgId,jdbcType=BIGINT}
			</foreach>
		</where>
	</select>

    <select id="queryUserIdCardByOrgId" parameterType="long" resultType="string">
        SELECT t2.idcard from t_sys_user_rel_pb_org t1
		INNER JOIN t_sys_user t2
		on t1.user_id = t2.id
		<where>
			and t2.status = 1
            <if test="orgId!=null">and t1.pborg_id = #{orgId,jdbcType=BIGINT}</if>
        </where>
    </select>

	<select id="queryUserIdByOrgids" parameterType="string" resultType="java.lang.Long">
		select user_id from t_sys_user_rel_pb_org
		where pborg_id in
		<foreach collection="orgIds" item="orgId" open="(" close=")" separator=",">
			#{orgId,jdbcType=BIGINT}
		</foreach>
	</select>

</mapper>